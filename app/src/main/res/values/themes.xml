<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InkSeeker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="ThemeBottomNavigation">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@animator/bottom_navigation_bar_icon_color</item>
        <item name="itemTextColor">@animator/bottom_navigation_bar_icon_color</item>
        <item name="itemRippleColor">#00000000</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
    </style>

    <style name="LinkButton">
        <item name="backgroundColor">@color/transparent</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottomDrag">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">@dimen/_100sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Theme.InkSeeker" parent="Base.Theme.InkSeeker" />
</resources>