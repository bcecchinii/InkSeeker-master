            android:layout_height="match_parent">

            <TextView
                android:id="@+id/explore_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/explore_title"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"></TextView>

            <EditText
                android:id="@+id/exploreSearchEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_36sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/exploreSearchButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/explore_search_hint"
                android:textAlignment="textEnd"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="0dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/exploreSearchButton"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/search"
                app:layout_constraintBottom_toBottomOf="@+id/explore_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/explore_title"
                app:tint="#FF8A2BE2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



