        android:backgroundTint="@color/white"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/exploreHeaderBottomGuideline"
        app:layout_constraintEnd_toStartOf="@+id/exploreHeaderRightGuideline"
        app:layout_constraintStart_toStartOf="@id/exploreHeaderLeftGuideline"
