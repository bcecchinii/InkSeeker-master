<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardElevation="10dp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:contentPadding="@dimen/_8sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/faq_title" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/faq_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_20sdp"
            android:text="1."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/faq_item_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:text="placeholder"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/faq_item_num"
            app:layout_constraintBottom_toBottomOf="@id/faq_item_num"
            app:layout_constraintStart_toEndOf="@id/faq_item_num"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/faq_item_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:textSize="@dimen/_8sdp"
            android:text="placeholder"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/faq_item_question"
            app:layout_constraintStart_toEndOf="@id/faq_item_num"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>